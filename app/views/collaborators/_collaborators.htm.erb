<div class="panel panel-info">
  <div class="panel-heading">
    <h4>Collaborators</h4>
  </div>
  <div class="panel-body">
    <% wiki.collaborators.each do |collaborator| %>
      <h4><span class="glyphicon glyphicon-user" aria-hidden="true"> <%= collaborator.user.email %> <%= link_to "Remove", [wiki, collaborator], method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure you want to remove this user?'} if current_user.is_owner_of?(wiki)%></span></h4>
    <% end %>
    <% if current_user.is_owner_of? wiki %>
      <%= render partial: 'collaborators/form', locals: { wiki: wiki, collaborator: collaborator} %>
    <% end %>
  </div>
</div>